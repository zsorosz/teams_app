<% include ../partials/header %>
<div class="container">
    <div>
        <h1 style="text-align: center;">Add a new team member to <%= team.country %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teams/<%= team._id %>/members" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="member[firstname]" placeholder="First name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="member[lastname]" placeholder="Last name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="member[position]" placeholder="Position">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="member[hoursperweek]" placeholder="Hours per Week">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="team[countrycode]" value="<%= team.countrycode %>">
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teams">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>