<% include ../partials/header %>
<div class="container">
    <div>
        <h1 style="text-align: center;">Create a new Shift Plan</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teams/<%= team._id %>/plan" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" name="year" placeholder="year">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="month" placeholder="month">
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-dark btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teams/<%= team._id %>/plan">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>