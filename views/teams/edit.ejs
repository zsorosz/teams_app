<% include ../partials/header %>
<div class="container">
    <div>
        <h1 style="text-align: center;">Edit <%= team.country %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teams/<%= team._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="country">Country</label>
                    <input class="form-control" type="text" id="country" name="team[country]" value="<%= team.country %>">
                </div>
                <div class="form-group">
                    <label for="teamlead">Teamlead</label>
                    <input class="form-control" type="text" id="teamlead" name="team[teamlead]" value="<%= team.teamlead %>">
                </div>
                <div class="form-group">
                    <label for="countrycode">Country Code</label>
                    <input class="form-control" type="text" id="countrycode" name="team[countrycode]" value="<%= team.countrycode %>">
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-dark btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teams">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>