<% include ../partials/header %>
<div class="container">
    <div>
        <h1 style="text-align: center;">Create a new Team</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teams" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="country" placeholder="country">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="teamlead" placeholder="teamlead">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="countryCode" placeholder="country code">
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teams">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>